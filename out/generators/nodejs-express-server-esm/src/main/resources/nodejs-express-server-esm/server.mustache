import config from './config.js'
import logger from './logger.js'
import ExpressServer from './expressServer.js'

logger.info(`Starting API Server, version ${config.VERSION}`)
logger.info(`Configured to run on ${config.URL_PATH}:${config.URL_PORT}`)
logger.info(`Zest backend url is ${config.ZEST_BACKEND_URL}`)

try {
    require('./local_index')
} catch (e) { // eslint-disable-line no-unused-vars
    // Intentionally Blank
}

const launchServer = async () => {
  let expressServer = null
  try {
    expressServer = new ExpressServer(config.URL_PORT, config.OPENAPI_YAML)
    expressServer.launch()
    logger.info('Express server running')
  } catch (error) {
    logger.error('Express Server failure', error.message)
  }
}

launchServer().catch(e => logger.error(e))
